@model Application.ViewModels.SerieViewModel

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5 text-center p-4 ">

    <h2>@Model.Title</h2>

    <div class="video-container mt-4 mb-3">
        <iframe width="1000" height="600" class="embed-responsive-item " src="@Model.VideoUrl" allowfullscreen></iframe>
    </div>

    <div class="mt-3">
        <button class="btn btn-danger" id="toggleDescriptionBtn">Mostrar Descripción</button>
    </div>

    <div id="descriptionContainer" class="mt-4 p-3" style="display: none;">
        <p>@Model.Description</p>
    </div>
</div>

<script>
    document.getElementById('toggleDescriptionBtn').addEventListener('click', function() {
        var descriptionContainer = document.getElementById('descriptionContainer');
        if (descriptionContainer.style.display === "none") {
            descriptionContainer.style.display = "block";
            this.textContent = "Ocultar Descripción";
        } else {
            descriptionContainer.style.display = "none";
            this.textContent = "Mostrar Descripción";
        }
    });
</script>
